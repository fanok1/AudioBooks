<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clipToPadding="false"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <CheckBox
        android:id="@+id/checkbox_select"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageFileType"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageFileType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/downloadIcon"
        app:layout_constraintStart_toEndOf="@id/checkbox_select"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/textFileName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="?colorPrimaryText"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/progressDownload"
        app:layout_constraintEnd_toStartOf="@id/button_control_download"
        app:layout_constraintStart_toEndOf="@id/imageFileType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Очень длинное название файла для проверки переноса.epub" />

    <ProgressBar
        android:id="@+id/progressDownload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:max="100"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/imageFileType"
        app:layout_constraintEnd_toEndOf="@id/textFileName"
        app:layout_constraintStart_toStartOf="@id/textFileName"
        app:layout_constraintTop_toBottomOf="@id/textFileName"
        tools:progress="60"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/button_control_download"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/download_control_button"
        android:padding="12dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@id/imageFileType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageFileType"
        tools:src="@drawable/ic_pause" />


    <LinearLayout
        android:id="@+id/layoutDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imageFileType"
        app:layout_constraintTop_toBottomOf="@id/imageFileType"
        tools:visibility="visible">


        <TextView
            android:id="@+id/textBookName"
            style="@style/DownloadItemDetailText"
            app:drawableStartCompat="@drawable/ic_book_open_outline"
            tools:text="Пепельная Колыбель" />

        <!-- Автор -->
        <TextView
            android:id="@+id/textAuthor"
            style="@style/DownloadItemDetailText"
            app:drawableStartCompat="@drawable/ic_autor"
            tools:text="Автор: Брендон Сандерсон" />


        <TextView
            android:id="@+id/textPerformer"
            style="@style/DownloadItemDetailText"
            app:drawableStartCompat="@drawable/ic_artist"
            tools:text="Исполнитель: Сергей Чонишвили" />


        <TextView
            android:id="@+id/textChapterName"
            style="@style/DownloadItemDetailText"
            app:drawableStartCompat="@drawable/ic_bookmark_outline"
            tools:text="Глава 3 — Сердце пепла" />


        <TextView
            android:id="@+id/source_name"
            style="@style/DownloadItemDetailText"
            app:drawableStartCompat="@drawable/ic_web"
            app:tint="?attr/subTextColor"
            tools:text="Источник: knigavuhe.org" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
