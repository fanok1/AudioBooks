<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_height"
    android:layout_marginStart="@dimen/recycler_item_margin"
    android:layout_marginTop="@dimen/recycler_item_margin"
    android:layout_marginEnd="@dimen/recycler_item_margin"
    android:layout_marginBottom="0dp"
    android:background="?attr/backgroundItem"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/recycler_item_image_width"
        android:layout_height="match_parent"
        android:contentDescription="@string/book_cover"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/recycler_item_textmargin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/recycler_item_margin_title"
                android:layout_marginEnd="@dimen/recycler_item_textmargin"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="?attr/colorPrimaryText"
                android:textSize="@dimen/titleSize"
                tools:context=".activity.MainActivity"
                tools:text="Зеланд Вадим - Жрица Итфат" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/hrefColor"
                    tools:ignore="NestedWeights"
                    tools:text="ЭЗОТЕРИКА" />

                <TextView
                    android:id="@+id/reting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recycler_item_textmargin"
                    android:drawableStart="@drawable/ic_reting"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/subTextColor"
                    tools:text="+7" />

                <TextView
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recycler_item_textmargin"
                    android:drawableStart="@drawable/ic_favorite"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/subTextColor"
                    tools:text="36" />

                <TextView
                    android:id="@+id/coments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/recycler_item_textmargin"
                    android:layout_marginEnd="@dimen/recycler_item_textmargin"
                    android:drawableStart="@drawable/ic_coments"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/subTextColor"
                    tools:text="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/series"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_book"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/hrefColor"
                        tools:text="Темная башня" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_clock"
                        android:gravity="center_vertical|end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/subTextColor"
                        android:textSize="@dimen/subTextSize"
                        tools:text="13 часов 15 минут" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/autor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_autor"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/hrefColor"
                        tools:text="Кинг Стивен" />

                    <TextView
                        android:id="@+id/artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/recycler_item_textmargin"
                        android:layout_marginEnd="@dimen/recycler_item_textmargin"
                        android:drawableStart="@drawable/ic_artist"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/hrefColor"
                        tools:text="Кинг Стивен" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>